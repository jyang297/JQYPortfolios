# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000,http://localhost:8000

# Supabase Configuration (REQUIRED)
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-anon-or-service-role-key-here

# Optional: GeoIP Service for detailed location tracking
# Sign up at: https://ipapi.com/ (free tier: 1000 requests/month)
IPAPI_KEY=

# Optional: Advanced Features
# Enable Prometheus metrics endpoint
ENABLE_METRICS=true
# Enable detailed request logging
ENABLE_REQUEST_LOGGING=true

---
// imports
import Link from "@/components/ui/Link.astro";

// data
const navData = [
  {
    title: "Home",
    href: "/",
  },
  {
    title: "Projects",
    href: "/projects",
  },

  // {
  //   title: "Blog",
  //   href: "/blog",
  // },
];
---

<nav>
  <ul role="list">
    <!-- 左侧：导航链接 -->
    <div class="nav-links">
      {
        navData.map((i) => {
          const hasIcon = i.href === "/";
          return (
            <Link
              href={i.href}
              variant={hasIcon ? "icon" : "ghost"}
              aria-label={hasIcon ? i.title : null}
            >
              {hasIcon ? (
                <img src="/favicon.svg" alt="Logo" width="55" height="55" />
              ) : (
                i.title
              )}
            </Link>
          );
        })
      }
    </div>
    
    <!-- 右侧：像素艺术兔子 -->
    <div class="pixel-rabbit-simple" title="Pixel Rabbit! "></div>
    
  </ul>
</nav>
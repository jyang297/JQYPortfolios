---
// asset
import Mine from "@/assets/avatar.jpeg";

// components
import Heading from "./ui/Heading.astro";
import Link, { type LinkProps } from "./ui/Link.astro";

interface Link extends LinkProps {
  name: string;
}

type Props = {
  title?: string;
  content?: string;
  links?: Link[];
};

// data
const defaultContent = {
  title: "Hi, I'm Jiaqi Yang",
  content: "Machine Learning Engineer and AI Developer.",
  links: [
    {
      href: "/assets/cv_pdf_template.pdf",
      name: "Download CV",
      variant: "secondary",
    },
    {
      href: "#connect",
      name: "Let's Connect",
      variant: "primary",
    },
  ],
};

const {
  title = defaultContent.title,
  content = defaultContent.content,
  links = defaultContent.links,
} = Astro.props;
---

<section aria-label="Hero section" class="hero">
  <img src={Mine.src} alt="Mine" />
  <Heading tagName="h1" tagSize="h2">{title}</Heading>
  <p class="hero-subtitle">{content}</p>
  <div class="columns">
    {
      links.map((l) => (
        <Link href={l.href} variant={l.variant}>
          {l.name}
        </Link>
      ))
    }
  </div>
</section>

<style>
  .hero-subtitle {
    white-space: nowrap;
    /* Or alternatively: */
    /* min-width: fit-content; */
    /* Or: */
    /* width: max-content; */
  }
</style>
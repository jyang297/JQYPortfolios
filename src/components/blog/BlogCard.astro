---
import type { CollectionEntry } from "astro:content";

// components
import Heading from "@/ui/Heading.astro";
import Link from "@/ui/Link.astro";
import { getEntry } from "astro:content";
import FormattedDate from "../ui/FormattedDate.astro";

type Props = {
  blog: CollectionEntry<"blog">;
  tagName: "h2" | "h3";
};

const { blog, tagName } = Astro.props;

const { title, slug, image, description, pubDate } = blog.data;

const author = await getEntry(blog.data.author.collection, blog.data.author.id);
---

<article aria-label={title} class="blog-card">
  <img src={image.src} width={400} height={225} alt="" />
  <div class="rows">
    <Heading tagName={tagName} tagSize="h3">{title}</Heading>
    <div class="columns">
      <FormattedDate pubDate={pubDate} />
      {author && <small>by {author.data.name}</small>}
    </div>
    <p>{description}</p>
    <Link href={`/blog/${slug}`}>Read blog</Link>
  </div>
</article>
